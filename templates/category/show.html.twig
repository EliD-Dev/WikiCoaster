{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>
                    <div class="d-inline-block p-2 rounded" style="background-color: {{ category.color }}; color: {{ category.getInvertedColor() }};">
                        {{ category.color }}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>


    <div class="d-flex gap-2"> 
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary mb-3">Modifier</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('app_category_index') }}" class="btn btn-secondary mb-3">Retour</a>
{% endblock %}
