{% extends 'base.html.twig' %}

{% block title %}Liste des Coasters{% endblock %}

{% block body %}
    <h1>Liste des Coasters</h1>

    <a href="{{ path('app_coaster_add') }}" class="btn btn-primary mb-3">Ajouter un Coaster</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Vitesse max</th>
                <th>Longueur</th>
                <th>Hauteur max</th>
                <th>En fonctionnement</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for coaster in coasters %}
                <tr>
                    <td>{{ coaster.id }}</td>
                    <td>{{ coaster.name }}</td>
                    <td>{{ coaster.maxSpeed }}km/h</td>
                    <td>{{ coaster.length }}m</td>
                    <td>{{ coaster.maxHeight }}m</td>
                    <td>{{ coaster.operating ? 'Oui' : 'Non' }}</td>
                    <td><a href="{{ path('app_coaster_edit', { id: coaster.id }) }}" class="btn btn-secondary btn-sm">Modifier</a></td>
                    <td>
                        <form method="post" action="{{ path('app_coaster_delete', { id: coaster.id }) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coaster.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer le coaster {{ coaster.name }} ?')">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun coaster trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}